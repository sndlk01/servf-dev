datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  fname String
  lname String
  email String  @unique
  login Login?
}

model Login {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  user     User   @relation(fields: [userId], references: [id])
  userId   Int    @unique
}

model Review {
  id     Int    @id @default(autoincrement())
  name   String
  review String
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  image     String?  // เพิ่ม ? เพื่อทำให้เป็น optional
  link      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}